<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="line_hor_style">
        <item name="android:height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_bg</item>
    </style>

    <!-- 首页tab-->
    <style name="home_tab">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/tab_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 首页tab字体-->
    <style name="home_tab_text">
        <item name="android:textSize">@dimen/home_tab_text_size</item>
        <item name="android:textColor">@drawable/tab_text_click</item>
    </style>
    <!-- 标题返回图标-->
    <style name="title_img_back">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/title_back_padleft</item>
        <item name="android:paddingRight">@dimen/title_back_padright</item>
        <item name="android:src">@drawable/back_click</item>
    </style>
    <!--标题右侧图标-->
    <style name="title_img_right">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/title_right_pad</item>
        <item name="android:src">@drawable/ic_scan</item>
    </style>
    <!-- 标题中间主标题字体控制-->
    <style name="title_text_center">
        <item name="android:textColor">@color/title_text_h1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 标题右侧小标题字体控制-->
    <style name="title_text_right">
        <item name="android:textColor">@color/title_text_h2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/title_back_padright</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
