<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_first"
            style="@style/home_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_first"
                android:layout_width="@dimen/home_tab_img_size"
                android:layout_height="@dimen/home_tab_img_size"
                android:background="@drawable/tab_img_click_first" />

            <TextView
                android:id="@+id/text_first"
                style="@style/home_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_first" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_second"
            style="@style/home_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_second"
                android:layout_width="@dimen/home_tab_img_size"
                android:layout_height="@dimen/home_tab_img_size"
                android:background="@drawable/tab_img_click_second" />

            <TextView
                android:id="@+id/text_second"
                style="@style/home_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_second" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_third"
            style="@style/home_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_third"
                android:layout_width="@dimen/home_tab_img_size"
                android:layout_height="@dimen/home_tab_img_size"
                android:background="@drawable/tab_img_click_third" />

            <TextView
                android:id="@+id/text_third"
                style="@style/home_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_third" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tab_fourth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/ll_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_fourth"
                    android:layout_width="@dimen/home_tab_img_size"
                    android:layout_height="@dimen/home_tab_img_size"
                    android:background="@drawable/tab_img_click_fourth" />

                <TextView
                    android:id="@+id/text_fourth"
                    style="@style/home_tab_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_fourth" />
            </LinearLayout>

            <View
                android:id="@+id/view_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ll_mine" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>